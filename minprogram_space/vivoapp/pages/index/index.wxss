.book{
  display: flex;
  padding: 15px;
  flex-direction: column;
}
.book-item{
  display: flex;
  align-items: center;
  height: 40px;
  border-bottom: 1px solid #ccc;
}

.page{
  display: flex;
  justify-content: center;
}
.page text{
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin: 0 5px;
}
.page text.active{
  background-color: blueviolet;
  color: white;
}
